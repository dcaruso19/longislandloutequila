{{#contentFor "postList"}}standard-list{{/contentFor}}
<div class="post-list">
	{{#foreach posts}}
	<div class="{{post_class}} {{#if image}}formated{{/if}}" {{#if @first}} id="author-info" {{#if author}} {{#if author.image}}data-author-image="{{author.image}}"{{/if}} data-author-name="{{author.name}}" data-author-bio="{{author.bio}}" data-author-cover="{{author.cover}}" {{/if}} {{/if}}>
		{{#if featured}}
			<span class="ribbon" title="Featured Post"><i class="fa fa-star-o"></i></span>
		{{/if}}
		<div class="post-media">
			{{#if image}}
			<p>
				<img src="{{image}}" alt="{{{title}}}" class="img-responsive"/>	            		            		            	
			</p>
			<div class="mask">
				<a class="preview magnific-popup" href="{{image}}">
					<i class="fa fa-search"></i>
				</a>
				<a class="detail" href="{{url}}">
					<i class="fa fa-link"></i>
				</a>
			</div>
			{{else}}
			{{content words="0"}}
			{{/if}}		
		</div>
		<div class="post-desc">		
			<h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
			<div class="post-excerpt">
	            {{excerpt}}
	        </div>
       		<div class="post-meta clearfix">
			    <span class="pull-left">
			        <i class="fa fa-calendar"></i> {{date published_at timeago="true"}}
			    </span>
			    <span class="pull-right">
			        <a class="read-more" href="{{url}}">Read more <i class="fa fa-angle-double-right"></i></a>
			    </span>
			</div>
		</div>
	</div>
	{{/foreach}}
</div>
{{pagination}}
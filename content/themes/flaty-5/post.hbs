{{!< default}}
{{#post}}
{{>misc/breadcrumb}}
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.3";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<main class="body-content page-detail" role="main">
	<div class="container">
        <div class="row">
            <div class="{{^has tag="_full_width,_left_sidebar,_both_sidebar"}}col-md-8 right-sidebar{{else}}{{#has tag="_both_sidebar"}}col-md-6 col-md-push-3 both-sidebar{{else}}{{#has tag="_left_sidebar"}}col-md-8 col-md-push-4 left-sidebar{{else}}col-md-12 full-width{{/has}}{{/has}}{{/has}}">
            	<div class="post-wrap">
            		<article class="{{post_class}}" id="author-info" {{#if author}} {{#if author.image}}data-author-image="{{author.image}}"{{/if}} data-author-name="{{author.name}}" data-author-bio="{{author.bio}}"{{/if}}>
                        {{! Everything below outputs content of the the post which has been published }}
                        <h2 class="post-title">
                            <a href="{{url}}">{{{title}}}</a>
                        </h2>
                        <div class="post-meta clearfix">
                            <span>
                                <i class="fa fa-calendar"></i>
                                {{date published_at timeago="true"}}
                            </span>
                            <span>
                                <i class="fa fa-user"></i> by {{author}}
                            </span>
                            {{#if tags}}
                            <span>
                                <i class="fa fa-tags"></i> on {{tags separator=", "}}
                            </span>
                            {{/if}}                            
                        </div>
            			<section class="post-content">
                            {{#if image}}
                            <p>
                                <img src="{{image}}" alt="{{{title}}}" class="img-responsive"/>                                                         
                            </p>
                            {{/if}}
                            {{content}}
                        </section>
            		    <footer class="post-footer">
                            {{#if author}}
                                <div class="post-author clearfix">
                                    {{#if author.image}}
                                    <!-- Author avatar -->
                                    <div class="avatar">
                                        <img src="{{author.image}}" alt="{{author.name}}" />
                                    </div>
                                    {{/if}}
                                    <h5 class="author-name">{{author}}</h5>
                                    <p class="author-bio">
                                        {{#if bio}}
                                            {{bio}}
                                        {{else}}
                                            I'm a Tequila/Agave Connoisseur, Taster & Reviewer from Long Island, NY. I want to teach others what I know about ALL Agave spirits, keeping it simple and fun!
                                        {{/if}}
                                    </p>
                                </div>
                            {{/if}}
                        </footer>
                    </article>
                    <div class="comment-wrap">
                    {{> comment/form}}
                    </div>
            	</div>
            </div>
            {{^has tag="_full_width,_left_sidebar,_both_sidebar"}}              
            <div class="col-md-4 sidebar right-sidebar">
                {{>sidebar/default}} 
            </div>
            {{else}}
            {{#has tag="_both_sidebar"}}                
            <div class="col-md-3 col-md-pull-6 sidebar left-sidebar">
                {{>sidebar/left}} 
            </div>
            <div class="col-md-3 sidebar right-sidebar">
                {{>sidebar/default}} 
            </div>
            {{else}}
            {{#has tag="_left_sidebar"}}
                <div class="sidebar col-md-4 col-md-pull-8 left-sidebar">
                    {{>sidebar/default}} 
                </div>              
            {{/has}}
            {{/has}}
            {{/has}}
       	</div>
    </div>
</main>
{{/post}}